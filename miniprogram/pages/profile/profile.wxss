/* pages/profile/profile.wxss */

.profile{
  background: #E54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;

}

.profile-img{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  display: block;
  left: 50%;
  transform: translate(-50%, 20rpx);
  border-radius: 50%;
  overflow: hidden;
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx); 
}